@model CurriculumWEB.Models.AccountSessionModel.RegistrationModel
           
@{
    ViewBag.Title = "Registration";
}
<script src="../../MyScript/Account/CheckingEmailAndNameAlredyExist.js" type="text/javascript"></script>


<h2>Registration</h2>
<fieldset>
    <div>
        <p>
            Compila il form di registrazione per poter poi usufruire del programma.
            <br />
            Scegli un Username ed un campo mail!
            La password verrà generata automaticamente e verrà spedita all'indirizzo di posta specificato.
        </p>

    </div>
</fieldset>
<fieldset>

@TempData["c"]
@using (Html.BeginForm("Registration","Account",FormMethod.Post,new{@class="UserForm"}))
{
<div id="Registration-div">

        <div style=" display:inline;">
        <p>Inserisci l'username che utilizzerai per accedere al servizio</p>
        <div class="editor-label">
                @Html.LabelFor(model => model.username)
            </div>
            <div class="username-general-div" style=" height:40px; display:inline" >
               <div class="editor-field-username" data-url="@Url.Action("NameAlreadyExist", "Account")">
                    @Html.EditorFor(model => model.username)
                    @Html.ValidationMessageFor(model => model.username)
                </div>
                <span class="failed-dettails-username-field" style="display:none"></span>
                <div class="icon-container-username-field" style="top:auto; left:auto; width:auto; height:auto">

                    <img alt=":-(" style="display:none; float:left" src="../../Content/img/failed-icon2.jpg" class="failed-icon-class"/>
                    <img alt=":-)" style="display:none; float:left" src="../../Content/img/success4-icon.jpg" class="success-icon-class"/>
                </div>
            </div>

        <p>Inserisci l'email associata al tuo username</p>
            <div class="editor-label">
                @Html.LabelFor(model => model.email)
            </div>
            <div style=" height:40px; display:inline" >
                <div class="editor-field-email" data-url="@Url.Action("EmailAlreadyExist", "Account")">
                    @Html.EditorFor(model => model.email)
                    @Html.ValidationMessageFor(model => model.email)
                </div>
                <span class="failed-dettails-email-field" style="display:none"></span>
                <div class="icon-container-email-field" style="top:auto; left:auto; width:auto; height:auto">

                    <img alt=":-(" style="display:none; float:left" src="../../Content/img/failed-icon2.jpg" class="failed-icon-class"/>
                    <img alt=":-)" style="display:none; float:left" src="../../Content/img/success4-icon.jpg" class="success-icon-class"/>
                </div>
            </div>

        </div>
        <input type="submit" class="submit-user-button"/>
</div>
}
    </fieldset>
